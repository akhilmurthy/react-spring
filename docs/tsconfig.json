{
  "include": [
    "env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "*.d.ts",
    "vite.config.mts"
  ],
  "exclude": ["build"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "paths": {
      "~/*": ["./app/*"]
    },
    "noEmit": true,
    "baseUrl": ".",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  }
}
